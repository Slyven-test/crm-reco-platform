# CRM Recommendation Platform - Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# FLASK CONFIGURATION
# ============================================================================
FLASK_ENV=production
SECRET_KEY=your-secret-key-here-change-this
DEBUG=False
TESTING=False

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=postgresql://crm_reco_user:your-password@localhost:5432/crm_reco_db

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME=CRM Recommendation Platform
APP_VERSION=1.0.0
APP_HOST=0.0.0.0
APP_PORT=8000

# ============================================================================
# CONNECTORS CONFIGURATION
# ============================================================================
CONNECTORS_CONFIG_DIR=/opt/crm-reco-platform/config/connectors

# iSaVigne Connector
ISAVIGNE_EXPORT_PATH=/mnt/shared/isavigne_exports
ISAVIGNE_FILE_PATTERN=*.csv
ISAVIGNE_ENCODING=utf-8

# Odoo Connector
ODOO_URL=https://odoo.example.com
ODOO_DB=production_db
ODOO_USER=crm_sync_bot
ODOO_API_KEY=your-odoo-api-key
ODOO_COMPANY_ID=1

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=/opt/crm-reco-platform/logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ============================================================================
# SECURITY
# ============================================================================
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# ============================================================================
# EMAIL NOTIFICATIONS (Optional)
# ============================================================================
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=notifications@example.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=noreply@example.com

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================
BACKUP_DIR=/opt/crm-reco-platform/backups
BACKUP_RETENTION_DAYS=30
