# Wine Recommendation CRM Platform - Environment Configuration
# Copy this file to .env and update values for your environment

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=postgresql://crm_user:secure_password_change_me@localhost:5432/crm_reco
DB_PASSWORD=secure_password_change_me
DB_HOST=localhost
DB_PORT=5432
DB_NAME=crm_reco
DB_USER=crm_user

# ============================================================================
# REDIS (Optional - for caching)
# ============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# ============================================================================
# API Configuration
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_VERSION=v1
API_TITLE="Wine Recommendation CRM Platform"
API_DESCRIPTION="Advanced recommendation engine for wine e-commerce"
API_DOCS_URL=/docs
API_REDOC_URL=/redoc

# ============================================================================
# CORS & Security
# ============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:80,http://localhost:8000
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*

# ============================================================================
# Authentication & JWT
# ============================================================================
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# Environment
# ============================================================================
ENVIRONMENT=development
# development, staging, production

LOG_LEVEL=INFO
# DEBUG, INFO, WARNING, ERROR, CRITICAL

DEBUG=true
# Set to false in production

# ============================================================================
# Admin UI
# ============================================================================
VITE_API_URL=http://localhost:8000/api/v1
VITE_APP_NAME="Wine Recommendation Admin"
VITE_APP_TITLE="Admin Dashboard"

# ============================================================================
# Features
# ============================================================================
ENABLE_API_DOCUMENTATION=true
ENABLE_AUDIT_LOGGING=true
ENABLE_OUTCOMES_TRACKING=true
ENABLE_AB_TESTING=true
ENABLE_MODEL_MONITORING=true

# ============================================================================
# Recommendation Engine
# ============================================================================
MIN_RECOMMENDATION_SCORE=0.3
DEFAULT_MAX_RECOMMENDATIONS=5
SCENARIO_DEFAULT=default
# default, new_customer, high_value, retention

# ============================================================================
# Gating & Quality
# ============================================================================
DEFAULT_GATING_POLICY=standard
# strict, standard, permissive

MIN_QUALITY_SCORE_THRESHOLD=0.6
QUALITY_CHECK_ENABLED=true

# ============================================================================
# Email Notifications (Optional)
# ============================================================================
SMTP_SERVER=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
SMTP_FROM_NAME="Wine Recommendation Platform"
EMAIL_ALERTS_ENABLED=false

# ============================================================================
# Monitoring & Analytics
# ============================================================================
SENTRY_DSN=
DATA_DOG_API_KEY=
NEW_RELIC_LICENSE_KEY=

# ============================================================================
# AWS (Optional - for S3, CloudFront, etc.)
# ============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-west-1
AWS_S3_BUCKET=
AWS_CLOUDFRONT_DOMAIN=

# ============================================================================
# CI/CD & Deployment
# ============================================================================
GITHUB_TOKEN=
DOCKER_REGISTRY=ghcr.io
DOCKER_USERNAME=
DOCKER_PASSWORD=

# ============================================================================
# Testing
# ============================================================================
TEST_DATABASE_URL=postgresql://crm_user:secure_password_change_me@localhost:5432/crm_reco_test
TEST_ENVIRONMENT=true

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# ============================================================================
# Data Retention
# ============================================================================
AUDIT_LOG_RETENTION_DAYS=90
OUTCOME_DATA_RETENTION_DAYS=365
TEST_DATA_AUTO_CLEANUP=true
